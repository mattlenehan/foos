<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">#ff079b06</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTab</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">#ff079b06</item>
        <item name="android:divider">#0023f0</item>
        <item name="android:actionBarSize">400pt</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ff8c1015</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
        parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#ffe4e047</item>
        <!--<item name="android:imag"></item>-->
    </style>

    <style name="MyActionBarTab"
        parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:background">#ff969698</item>
        <item name="android:divider">#0023f0</item>
    </style>
</resources>