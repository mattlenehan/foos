<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@color/tan"
    >

    <TextView
        android:id="@+id/team_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textColor="@color/black"
        />

    <com.parse.ParseImageView
        android:id="@+id/indiv_player_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:maxHeight="42dp"
        android:maxWidth="42dp"
        android:adjustViewBounds="true"
        android:paddingRight="12dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/team_player_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#ffddb312"
            android:textSize="18sp"
            android:typeface="serif"
            android:text="Matthew"
            />

        <TextView
            android:id="@+id/team_player_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#ffddb312"
            android:typeface="serif"
            android:text="Mishika"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="34"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/team_losses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="20"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/team_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="76"
            android:textColor="#000000"
            android:textSize="24sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="%"
            android:textSize="12dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>