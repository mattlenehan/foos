<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:background="@color/tan"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/team_score_title"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="25dp"
            android:textColor="@color/gray"
            android:text="Team A"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="P1:"
                />

            <Spinner
                android:id="@+id/team_a_player_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="center"
                android:background="@drawable/dropdown_selector"
                android:popupBackground="@color/white"
                >

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="P2:"
                />

            <Spinner
                android:id="@+id/team_a_player_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="center"
                android:background="@drawable/dropdown_selector"
                >

            </Spinner>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:layout_gravity="center"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:clickable="true"
            android:src="@drawable/ic_up_chevron"
            />

        <com.example.foosball.app.ui.IntegerView
            android:id="@+id/team_a_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="54sp"
            android:textColor="@color/green"
            android:text="3"
            />

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:clickable="true"
            android:src="@drawable/ic_down_chevron"
            />

    </LinearLayout>

</LinearLayout>
