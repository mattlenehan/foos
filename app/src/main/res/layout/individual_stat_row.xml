<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:background="@drawable/white_tappable_bg"
    >

    <ImageView
        android:id="@+id/indiv_player_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingRight="12dp"
        android:src="@drawable/abc_ic_cab_done_holo_light"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#123123"
            android:textSize="26sp"
            android:text="MATTHEW"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#123123"
            android:textSize="24sp"
            android:text="lenehan"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/indiv_player_wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="34"
        android:textColor="#000000"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="-"
        android:textColor="#000000"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/indiv_player_losses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="26"
        android:textColor="#000000"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/indiv_player_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="76%"
        android:textColor="#000000"
        android:textSize="24sp"
        />

</LinearLayout>